{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {
      "~components": ["components"],
      "~config/*": ["config/*"],
      "~styles": ["styles"],
      "~services/*": ["services/*"],
      "~store/*": ["store/*"],
      "~assets/*": ["assets/*"],
      "~shared": ["shared"],
      "~shared/*": ["shared/*"]
    }
  },
  "include": ["src/index.tsx", "src/custom.d.ts"]
}
