{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~components": ["components"],
      "~styles": ["styles"],
      "~services/*": ["services/*"]
    }
  },
  "include": ["src/index.tsx"]
}
